<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:id="@+id/azioneProgrammata"
    android:background="#FFFFFF"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/idAzione"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomeAzione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome azione"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/stanzaProgr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stanza"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        />


                    <TextView
                        android:id="@+id/nomeParametro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parametro"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">

                <Switch
                    android:id="@+id/abilitaAzione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </TableRow>
</TableLayout>
